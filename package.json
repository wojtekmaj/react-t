{
  "name": "@wojtekmaj/react-t",
  "version": "0.8.0",
  "description": "Simple translation module for React applications.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "source": "src/index.ts",
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "build": "yarn build-esm && yarn build-cjs",
    "build-esm": "tsc --project tsconfig.build.json --outDir dist/esm --module esnext",
    "build-cjs": "tsc --project tsconfig.build.json --outDir dist/cjs --module commonjs",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "husky install",
    "prepack": "yarn clean && yarn build",
    "prettier": "prettier --check . --cache",
    "test": "yarn lint && yarn tsc && yarn prettier && yarn unit",
    "tsc": "tsc --noEmit",
    "unit": "vitest run"
  },
  "keywords": [
    "react",
    "translation",
    "localization",
    "l10n",
    "i18n"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "dependencies": {
    "@types/lodash.once": "^4.1.7",
    "@wojtekmaj/react-hooks": "^1.16.2",
    "get-user-locale": "^2.0.0",
    "lodash.once": "^4.0.0",
    "prop-types": "^15.6.0",
    "tiny-invariant": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^14.0.0",
    "eslint": "^8.26.0",
    "eslint-config-wojtekmaj": "^0.8.2",
    "husky": "^8.0.0",
    "jsdom": "^21.1.0",
    "prettier": "^2.7.0",
    "pretty-quick": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.0",
    "typescript": "^5.0.2",
    "vitest": "^0.29.2"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wojtekmaj/react-t.git"
  },
  "funding": "https://github.com/wojtekmaj/react-t?sponsor=1",
  "packageManager": "yarn@3.1.0"
}
