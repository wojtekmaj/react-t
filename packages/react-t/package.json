{
  "name": "@wojtekmaj/react-t",
  "version": "2.0.4",
  "description": "Simple translation module for React applications.",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./dist/utils/locale": "./dist/utils/locale.js",
    "./*": "./*"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "node -e \"fs.rmSync('./dist', { recursive: true, force: true })\"",
    "format": "biome format",
    "lint": "biome lint",
    "prepack": "yarn clean && yarn build",
    "test": "yarn lint && yarn tsc && yarn format && yarn unit",
    "tsc": "tsc",
    "unit": "vitest",
    "watch": "yarn build --watch"
  },
  "keywords": [
    "react",
    "translation",
    "localization",
    "l10n",
    "i18n"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "dependencies": {
    "@wojtekmaj/react-hooks": "^2.0.0",
    "get-user-locale": "^3.0.0",
    "tiny-invariant": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "happy-dom": "^15.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.5.2",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "@types/react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wojtekmaj/react-t.git",
    "directory": "packages/react-t"
  },
  "funding": "https://github.com/wojtekmaj/react-t?sponsor=1"
}
